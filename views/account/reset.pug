<!DOCTYPE html>
html(lang="en")
    include ../includes/head
    body.bg-gradient-primary
        .container.mt-5
            .row.justify-content-center
                .col-xl-10.col-lg-12.col-md-9
                    .card.o-hidden.border-0.shadow-lg.my-5
                        .card-body.p-0
                            .row
                                .col-lg-6.d-none.d-lg-block.bg-password-image
                                .col-lg-6
                                    .p-5
                                        if errorMessage
                                            .alert.alert-danger.col-sm-12 #{errorMessage} 
                                        .text-center
                                            h1.h4.text-gray-900.mb-2 Forgot Your Password?
                                            p.mb-4 We get it, stuff happens. Just enter your email address below and we'll send you a link to reset your password!
                                        form.user(method="POST" action="reset-password")
                                            .form-group
                                                input.form-control.form-control-user#exampleInputEmail(type="email" aria-describedby="emailHelp" placeholder="Enter Email Address..." name="email" required)
                                            input.btn.btn-primary.btn-user.btn-block(type="submit" value="Reset Password")
                                        hr
                                        .text-center
                                            a.small(href="/register") Register
                                        .text-center
                                            a.small(href="/login") Login



                
        include ../includes/script