<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(name="description" content="Admin Dashboard")
        meta(name="author" content="SBI Bilişim A.Ş.")
        title #{title}
        link(rel="shortcut icon" type="image/png" href="../img/favicon.png")
        link(rel="stylesheet" type="text/css" href="../vendor/bootstrap-4.3.1/css/bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="../vendor/fontawesome-5.8.1/css/fontawesome.min.css")
        link(rel="stylesheet" type="text/css" href="../css/font.min.css")
        link(rel="stylesheet" type="text/css" href="../css/style.min.css")
    body.bg-gradient-primary
        .container(style="margin-top:150px;")
            .card.o-hidden.border-0.shadow-lg.my-5
                .card-body.p-0
                    .row
                        .col-lg-5.d-none.d-lg-block.bg-register-image
                        .col-lg-7
                            .p-5
                                .text-center
                                    h1.h4.text-gray-900.mb-4 New Password
                                hr
                                form.user(method="POST" action="/new-password")
                                    input(type="hidden" name="userId" value=`${userId}`)
                                    input(type="hidden" name="passwordToken" value=`${passwordToken}`)
                                    .form-group.row
                                        input.form-control.form-control-user#exampleInputPassword(type="password" placeholder="Password" name="password")
                                    .form-group.row
                                        input.form-control.form-control-user#exampleRepeatPassword(type="password" placeholder="Repeat Password" name="repassword")
                                    hr
                                    input.btn.btn-primary.btn-user.btn-block(type="submit" value="Change Password") 
        script(type="text/javascript" src="../vendor/jquery-3.4.1/js/jquery-3.4.1.min.js")
        script(type="text/javascript" src="../vendor/popper-1.15.0/js/popper.min.js")
        script(type="text/javascript" src="../vendor/bootstrap-4.3.1/js/bootstrap.min.js")
        script(type="text/javascript" src="../js/script.min.js")
