<!DOCTYPE html>
html(lang="en")
    include ../includes/head
    block styles
        script(src="js/alertify.min.js")
        link(rel="stylesheet" href="css/alertify.min.css")
        link(rel="stylesheet" href="css/bootstrapAlertify.min.css")
    body.bg-gradient-primary
        .container.mt-5
            .row.justify-content-center
                .col-xl-10.col-lg-12.col-md-9
                    .card.o-hidden.border-0.shadow-lg.my-5
                        .card-body.p-0
                            .row
                                .col-lg-6.d-none.d-lg-block.bg-login-image
                                .col-lg-6
                                    .p-5
                                        if errorMessage
                                            .alert.alert-danger.col-sm-12#error #{errorMessage}
                                        if (action !== 'undefined' && action === 'save')
                                            div.alert.alert-success User has been registered.
                                        .text-center
                                            h1.h4.text-gray-900.mb-4 Login Form
                                        hr
                                        form.user(method="POST" action="login")
                                            .form-group
                                                input.form-control.form-control-user#exampleInputEmail(type="email" aria-describedby="emailHelp" placeholder="Enter Email Address..." name="email" required)
                                            .form-group
                                                input.form-control.form-control-user#exampleInputPassword(type="password" placeholder="Password" name="password" required)
                                            .form-group
                                                .custom-control.custom-checkbox.small
                                                    input.custom-control-input#customCheck(type="checkbox" checked disabled)
                                                    label.custom-control-label(for="customCheck") Remember Me
                                            input.btn.btn-primary.btn-user.btn-block(type="submit" value="Login") 
                                            //- hr
                                            //- a.btn.btn-google.btn-user.btn-block(href="#")
                                            //-     i.fab.fa-google.fa-fw
                                            //-     |   Login with Google 
                                            //- a.btn.btn-face.btn-user.btn-block(href="#")
                                            //-     i.fab.fa-facebook-f.fa-fw
                                            //-     |   Login with Facebook
                                        br
                                        hr
                                        .text-center
                                            a.small(href="/reset-password") Forgot Password?
                                        .text-center
                                            a.small(href="/register") Register
        include ../includes/script
        block scripts
            script(type="text/javascript" src="js/alertify.js")