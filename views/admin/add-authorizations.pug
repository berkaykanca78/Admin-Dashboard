form(action="/add-authorizations" method="POST")
        .modal.fade#addModal(tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
            .modal-dialog.modal-dialog-vertical-center.modal-lg(role="document")
                .modal-content
                    .modal-header
                        h5.modal-title#label Add Role
                        button.close(type="button" data-dismiss="modal" aria-label="Close" onclick="clearedSpan()")
                            span(aria-hidden="true") &times;
                    .modal-body
                        .form-group.row
                                label.col-sm-3.col-form-label(for="inputRoleName")
                                    b Role Name:
                                .col-sm-9
                                    input.form-control#inputRoleName(type="text" placeholder="Role Name" name="inputRoleName")
                        .form-group.row
                            label.col-sm-3.col-form-label(for="spanCaps")
                                b Capabilties:
                            .col-sm-9
                                -var i=1;
                                each capability in capabilities
                                    span.badge.badge-secondary.pointer.capability(style="cursor:pointer;" onclick="clickedSpan()" id=`selected${i}` name="spanCaps") #{capability}
                                    | &nbsp;
                                    -i++;
                                input#Lists(type="hidden" name="Lists")   
                    .modal-footer
                        button.btn.btn-danger(type="button" onclick="clearedSpan()" data-dismiss="modal") Close  
                        button.btn.btn-success(type="submit" onclick="clearedSpan()") Add Role 
block scripts
    script(src="js/addAuth.js")